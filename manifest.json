{
    "name": "Foodsoft",
    "id": "foodsoft",
    "packaging_format": 1,
    "description": {
        "en": "Foodsoft for Yunohost.",
        "fr": "Foodsoft pour YunoHost."
    },
    "version": "1.0~ynh1",
    "url": "https://foodcoops.github.io/foodsoft-hosting/",
    "license": "AGPL",
    "maintainer": {
        "name": "decentral1se",
        "email": "lukewm@riseup.net",
        "url": "https://decentral1.se/"
    },
    "requirements": {
        "yunohost": ">= 3.6"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for foodsoft",
                    "fr": "Choisissez un nom de domaine pour foodsoft"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for foodsoft",
                    "fr": "Choisissez un chemin pour foodsoft"
                },
                "example": "/example",
                "default": "/example"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l’administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "fr"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Set the administrator password",
                    "fr": "Définissez le mot de passe administrateur"
                },
                "help": {
                    "en": "Use the help field to add an information for the admin about this question.",
                    "fr": "Utilisez le champ aide pour ajouter une information à l'intention de l'administrateur à propos de cette question."
                },
                "example": "Choose a password"
            }
        ]
    }
}
